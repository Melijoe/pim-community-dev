{% set children %}
    [{% for category in categories %}
        {% include 'PimCatalogBundle:CategoryTree:_category.html.twig' %}
        {% if not loop.last %},{% endif %}
    {% endfor %}]
{% endset %}

{% if parent is not null %}
    {% include 'PimCatalogBundle:CategoryTree:_category.html.twig' with { 'category': parent } %}
{% else %}
    {{ children }}
{% endif %}
